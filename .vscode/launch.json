{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "main.py",  // Nome do seu arquivo principal Flask
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"      // Habilita o modo de debug
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true
        }
    ]
}
